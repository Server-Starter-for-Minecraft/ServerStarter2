{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vitest/globals", "vitest/importMeta"]
  },
  "include": [
    "src/**/*.ts",
    "src-electron/**/*.ts",
    "src-public/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "strictNullChecks": true,
      "module": "ESNext"
    }
  }
}
